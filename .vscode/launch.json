// A launch configuration that launches the extension inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Test Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "${workspaceFolder}/samples/", // Set the "project" folder
        "${workspaceFolder}/samples/test.ipxe", // Open a sample file by default
        "${workspaceFolder}/samples/test.ipxe.slc", // Open a sample file by default
        "${workspaceFolder}/samples/test.json.slc", // Open a sample file by default
        "${workspaceFolder}/samples/test.toml.slc", // Open a sample file by default
        "${workspaceFolder}/samples/test.yaml.slc", // Open a sample file by default
        "--extensionDevelopmentPath=${workspaceFolder}", // Set the development path
        "--disable-extensions" // Disable other extensions
      ]
    }
  ]
}
