// TODO: Shoelaces script starts with `{{define "filename" -}}` and ends with `{{end}}`
// TODO: Shoelaces script supports `{{...}}`
// TODO: Shoelaces script defines "internal" variables as `{{.foo}}`
{
  // Define line comments
  "comments": {
    // Symbol used for single line comment. Remove this entry if your language does not support line comments
    "lineComment": "#",

    // Symbols used for start and end a block comment. Remove this entry if your language does not support block comments
    "blockComment": ["/*", "*/"]
  },

  // Symbols used as brackets
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],

  // Symbols that are auto closed when typing
  "autoClosingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"]
  ],

  // Symbols that can be used to surround a selection
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"]
  ],

  // Define basic folding rules
  "folding": {
    "offSide": true,
    "markers": {
      // TODO: Shoelaces should probably just support the "define" and "end" as a foldable region?
      "start": "/*",
      "end": "*/"
    }
  }
}
